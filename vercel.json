{
  "version": 2,
  "builds": [
    {
      "src": "src/app.ts",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["dist/**"],
        "skipBuild": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/app.ts"
    },
    {
      "src": "/(.*)",
      "dest": "src/app.ts"
    }
  ]
}